<%= form_for([@restaurant, @special_menu, @food_type], html: { class: "form" }) do |form| %>
  <% if @food_type.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@food_type.errors.count, "error") %> prohibited this food_type from being saved:</h2>

      <ul>
      <% @food_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= form.label "Nombre", class: "control-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-top: 20px">
    <% @restaurant.food_items.where(deleted_at: nil).each do |food_item| %>
      <%= check_box_tag 'food_type[food_item_ids][]', food_item.id %>
      <%= label_tag food_item.name %>
      <br>
    <% end %>
  </div>

  <div class="form-group" style="margin-top: 10px">
    <%= form.label :have_to_select_one, class: "form-check-label" do %>
      Hay que elegir uno 
      <%= form.check_box :have_to_select_one, class: "form-check-input" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Guardar", class: "btn btn-primary btn-margin-top" %>
  </div>
<% end %>