<%= render 'layouts/header_admin' %>

<section class="home dashboard-index">
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Restaurantes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Número de teléfono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= link_to 'Show', restaurant_dashboard_path(restaurant), class: 'btn btn-primary btn-dashboard' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</section>