<%= render 'layouts/header' %>

<section class="home">
  <div class="container" style="margin-top: 10px">
    <table class="table">
      <thead>
        <tr>
          <th>Hora</th>
          <th>Details</th>
          <th>Total</th>
          <th>Estado</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><h6><%= order.created_at.strftime('%H:%M') %></h6></td>
            <td>
              <% order.special_menus.each do |special_menu| %>
                <% special_menu.food_types.where(have_to_select_one: false).each do |food_type| %>
                  <% food_type.food_items.each do |food_item| %>
                    <p><%= food_item.name %></p>
                  <% end %>
                <% end %>
              <% end %>
              <% order.food_items.each do |food_item| %>
                <p><%= food_item.name %></p>
              <% end %>
              <% order.special_menus.each do |special_menu| %>
                <p class="pink">* <%= special_menu.name %></p>
              <% end %>
            </td>
            <td><h5 class="pink"><%= number_to_currency(order.total_price, precision: 2, unit: 'â‚¬') %></h5></td>
            <td>
              <p>Pagado</p>
            </td>
            <td>
              <%= link_to 'Done', restaurant_order_path(current_restaurant, order), method: :delete, class: 'btn btn-danger btn-margin-bottom btn-margin-top btn-dashboard' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
