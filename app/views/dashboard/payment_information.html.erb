<%= render 'layouts/header' %>

<section class="home" style="height: 100%">
<div class="container" style="margin-top: 10px">
<h2>Bank account information</h2>
<%= form_for(@restaurant, url: update_payment_information_path(@restaurant), html: { class: 'form-horizontal' }) do |form| %>
  <!-- Add form fields for payment information -->
  <div class="form-group">
    <%= form.label :stripe_account_id, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= form.text_field :stripe_account_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :bank_account_number, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= form.text_field :bank_account_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :bank_routing_number, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= form.text_field :bank_routing_number, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :bank_account_holder_name, class: 'control-label col-sm-2' %>
    <div class="col-sm-6">
      <%= form.text_field :bank_account_holder_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= form.submit 'Update Payment Information', class: 'btn btn-primary btn-margin-top' %>
    </div>
  </div>
<% end %>
</div>
</section>