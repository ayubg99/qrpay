<%= render 'layouts/header' %>

<section class="home" style="height: 100%; padding-top: 80px">
  <div class="container">
    <%= link_to dashboard_path, class: 'btn btn-primary btn-margin-bottom' do %>
      <%= content_tag :i, '', class: 'bx bx-arrow-back' %>
    <% end %>
    <h2>Perfil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
      <%= render "restaurants/shared/error_messages", resource: resource %>

      <div class="form-group col-md-5">
        <%= f.label "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label "Nombre de restaurante" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label "Dirección" %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group col-md-2">
        <%= f.label "Numero de telefono" %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group col-md-5">
        <%= f.label "Nueva contraseña" %> <i>(déjalo en blanco si no quieres cambiar la contraseña)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> mínimo de caracteres</small>
        <% end %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group col-md-5">
        <%= f.label "Contraseña actual" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Guardar", class: 'btn btn-primary btn-margin-top' %>
      </div>
    <% end %>
  </div>
</section>
