<%= render 'layouts/header_admin' %>

<section class="home" style="height: 100%; padding-top: 80px">
  <div class="container">
<div class="container d-flex align-items-center">
  <div class="col-md-6">
    <h2>Nuevo restaurante</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  class: "contact-form") do |f| %>
      <%= render "restaurants/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label "correo electrónico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "nombre de restaurante" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "dirección" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "número de teléfono" %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :city, "Ciudad" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :country, "País" %>
        <%= f.text_field :country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :postal_code, "Còdigo postal" %>
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "contraseña" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Guardar", class: "btn btn-primary restaurant-demo-btn" %>
      </div>
    <% end %>
  </div>
</div>
</div>
</section>